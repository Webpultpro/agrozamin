
mixin modal() 
	//  start modals

	+b.modal-win(id="modal-call" class=" " style="display: none" )
		+form-wrap
			.text-center
				+e.title.form-data.h3.ttu Обратный звонок
				p.after-headline Заполните заявку и&nbsp;мы&nbsp;с&nbsp;Вами свяжемся в&nbsp;течение 15&nbsp;минут

			+input("Ваше Имя")(required)  
			+e.BUTTON.btn.btn(type="submit"  ) 
			+policy()
	// #modal-call
	+b.modal-win.text-center(id="modal-go-reg" class=" " style="display: none" )
		img(src="img/svg/home-icon.svg", loading="lazy"  alt="").w-100px.mx-auto
		br
		br
		br
		p.text-secondary Сотувни амалга ошириш учун тизмидан рўйхатдан ўтган болишингиз зарур
		br
		br
		br
		a.btn.btn-primary.w-190.mx-auto(href="#") Рўйхатдан ўтиш 
	// #modal-go-reg
	+b.modal-win.text-center(id="modal-view-order" class=" " style="display: none" )
		img(src="img/svg/basket-i.svg",  loading="lazy" alt="").w-100px.mx-auto
		br
		.h4.text-center Сизнинг буюртмангиз қабул қилинди
		br
		p.text-secondary Мутахассис буюртмани тасдиқлаш ва маълумотларни аниқлаштириш учун сизга мурожаат қилади
		br
		br
		br
		a.btn.btn-primary.w-190.mx-auto(href="#") Буюртмани кўриш
	// #modal-view-order
	+b.modal-win.text-center(id="modal-star" class=" " style="display: none" )
		img(src="img/svg/star-i.svg",  loading="lazy" alt="").w-100px.mx-auto
		br
		.h4.text-center Баҳолаш мезони
		br
		p.text-secondary Харид сизга мақул келган бўлса ўз&nbsp;баҳоингизни қолдиришингиз мумкин. Сизнинг баҳоингиз сотувчиларнинг рейтинги учун муҳимдир
		br
		+stars().--lg
		br
		br
		a.btn.btn-primary.w-190.mx-auto(href="#") Таййор
	// #modal-star

	+b.modal-win.text-center(id="modal-close-order" class=" " style="display: none" )
		img(src="img/svg/gift-1.svg",  loading="lazy" alt="").w-100px.mx-auto
		br
		.h4.text-center Буюртмани ёпиш
		br
		p.text-secondary Буюртмани ёпиш ҳақидаги сўровингиз харидор томонидан тасдиқлаганганидан сўнг қабул қилинади ва&nbsp;&laquo;Буюртма ёпилган&raquo; статусига ўзгаради
		br
		br
		a.btn.btn-primary.w-190.mx-auto(href="#") Тайёр
	// #modal-close-order
	

	+b.modal-win.text-center(id="modal-delete" class=" " style="display: none" )
		img(src="img/svg/delete.svg",  loading="lazy" alt="").w-100px.mx-auto
		br
		.h4.text-center Махсулот ўчириш хохлайсизми?
		br
		p.small.text-secondary Ўчирилган махсулот платформадан бутунлай олиб ташланади ва&nbsp;уни&nbsp;таҳрирлашнинг имкони бўлмайди
		br
		br
		a.btn.btn-primary.mx-auto(href="#") Махсулотни ўчириш
	// #modal-delte
	
	// end modals