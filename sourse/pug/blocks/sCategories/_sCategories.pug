mixin sCategories(data)
	// start sCategories
	+b.SECTION.sCategories.section#sCategories&attributes(attributes)
		.container
			+b.section-title.text-center(class="wow animate__fadeInUp"  )
				h2 Маҳсулот категориялари
			+e.slider--js
				.row.swiper-wrapper
					mixin item(i, t)
						+e.col.col-lg-3.swiper-slide(class="wow animate__fadeInUp" )
							+e.item(href='#' style=`--hover-bg: rgba(231,164,96,.15);--hover-color: #E7A460;`)
								+e.DIV.img-wrap
									img(src=`img/svg/categories-${i}.svg` alt="")
								+e.title!= t
					+item(1, `Уруғлар`)
					+item(2, `Агрохимия`)
					+item(3, `Ўғитлар`)
					+item(4, `Техника`)
	// end sCategories