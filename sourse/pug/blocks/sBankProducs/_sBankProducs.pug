mixin sBankProducsBody(h2)
	// start sBankProducs
	+b.SECTION.sBankProducs.section#sBankProducs&attributes(attributes)
		.container
			+b.section-title.text-center(class="wow animate__fadeInUp" )
				h2= h2
			+e.slider-wrap
				+e.slider--js.swiper-container
					.swiper-wrapper
						block
				.d-none.d-md-block(class="wow animate__fadeInUp" )
					+arrow
	// end sBankProducs
mixin itemSlide(i, t, p, l)
	+e.col.col-lg-3.swiper-slide(class="wow animate__fadeInUp" )
		+e.item(href='#')
			+e.DIV.img-wrap
				if i
					//- img(src=`img/@2x/populars-${i}.jpg` alt="")
					+pic(`bank-${i}.jpg`,'',0)
			+e.DIV.caption
				+e.DIV.price!= t
				p!= p
				if !l
					+e.btn Батафсил
				else
					.text-info.mt-auto Батафсил
mixin sBankProducs(data)
	+sBankProducsBody('Банк махсулотлари')
		+itemSlide(1, `Visa Business корпоратив картаси`, `Виса халқаро тўлов тизимининг корпоратив банк картаси бўлиб у хизмат сафарлар харажатлари`)
