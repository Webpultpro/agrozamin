mixin search-block()
	+b.search-block
		form
			input(type="text"  data-text="Агрозамин бўйича қидирувб, Агрозамин бўйича қидирув 213123, еще текст " )
			button 
				+icon("search")

mixin stars()
	+b.stars&attributes(attributes)
		+icon("star").active
		+icon("star").active
		+icon("star").active
		+icon("star").active
		+icon("star")


mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin orderClosed(data)
	+b.orderClosed
		+e.title= data.title
		+e.switch.form-check.form-switch
			input#switch.form-check-input(type='checkbox')&attributes(attributes)
			label.form-check-label(for='switch')= data.label

mixin info-message(p)
	+b.info-message&attributes(attributes)
		img(src="img/svg/message.svg", alt="")
		p!= p

