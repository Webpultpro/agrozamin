mixin card(i,t='Қизил Юсуф памидори', cl="col-xl-4 col-md-4")
	div(class= cl)&attributes(attributes)
		+b.card-prod--vertical
			div
				+e.img-wrap.bg-wrap(href="#")
					label.custom-input_product
						input.custom-input__input(name="checkbox" type="checkbox")
						span.custom-input__image.custom-input__checked-image
							+icon('heart-checked')
						span.custom-input__image
							+icon('heart')
					+pic(`prod-${i}.jpg`,'bg',0).picture-bg
			+e.caption
				.fw-500.mb-1: a.text-body(href="#")= t
				.text-secondary.pb-3.mb-auto МЧЖ "AvtoServisGroup"
				+e.price.text-md-center
					| 4 590 000 
					span.d-md-block.pb-1 сум / кг
				+addblock()
				if block
					block
				else
					+e.btn.btn-primary(type="button") Оставить заявку
				+cardlinks()

mixin b-c(i ,t)
	+b.btn-with-circle
		+e.btn(href="#")&attributes(attributes)
			+icon(i)
		+e.title= t

mixin cabinetTab()
