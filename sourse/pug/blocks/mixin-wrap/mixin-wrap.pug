mixin stars()
	+b.stars&attributes(attributes)
		+icon("star").active
		+icon("star").active
		+icon("star").active
		+icon("star").active
		+icon("star")


mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1000")
		+e.btn--plus(type="button")

mixin orderClosed(data)
	+b.orderClosed
		+e.title= data.title
		+e.switch.form-check.form-switch
			input#switch.form-check-input(type='checkbox')&attributes(attributes)
			label.form-check-label(for='switch')= data.label

mixin info-message(p)
	+b.info-message&attributes(attributes)
		img(src="img/svg/message.svg", alt="")
		p!= p


mixin cardlinks(f)
	+e.footer-links&attributes(attributes)
		+e.footer-link(href="#")
			+icon("eye-prod")
			span 365
		+e.footer-link(href="#" class= f)
			+icon("convert-prod")
			span 125
		+e.footer-link(href="#")
			+icon("phone-prod")
			span 564

mixin cardlinksWithPhone(f)
	+e.footer-links&attributes(attributes).d-md-none
		+e.footer-link(href="#")
			+icon("email-link")
		+e.footer-link(href="#" class="favorite")
			+icon("like-link")
			+icon("like")
		+e.footer-link.phone-button
			.icon-wrapper
				+icon("phone-link")
			a(href="tel:998994099877" class="tel") +998994099877

mixin cardlinksWithPhoneNoLike(f)
	+e.footer-links&attributes(attributes)
		+e.footer-link(href="#")
			+icon("email-link")
		+e.footer-link.phone-button
			.icon-wrapper
				+icon("phone-link")
			a(href="tel:998994099877" class="tel") +998994099877

mixin cardlinksLike(f)
	+e.footer-links&attributes(attributes)
		+e.footer-link(href="#" class="favorite")
			+icon("like-link")
			+icon("like")

