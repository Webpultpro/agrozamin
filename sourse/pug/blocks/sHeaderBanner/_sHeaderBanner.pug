mixin sHeaderBanner(data)
	// start sHeaderBanner
	+b.SECTION.sHeaderBanner.section#sHeaderBanner&attributes(attributes)
		.container 
			+e.slider--js.swiper-container
				.swiper-wrapper
					mixin slide(i,t,p)
						+e.slide.swiper-slide.bg-wrap 
							+pic(`head-slider-bg-${i}.jpg`,'bg').picture-bg
							+e.content
								+e.title!= t
								p!= p 
							+e.btn(href="#") Харидни бошлаш
							//- +pic(`head-slider-img-${i}.png`,'').head-slide-img
							picture.head-slide-img
								source(type='image/webp' srcset=`img/@2x/webp/head-slider-img-${i}.webp` media=`(min-width:992px)`)
								source(type=`image/webp` srcset=`img/@2x/webp/head-slider-img-mob-${i}.webp`)
								source(type=`image/png` srcset=`img/@2x/head-slider-img-${i}.png` media=`(min-width:992px)`) 
								img(src=`img/@2x/head-slider-img-mob-${i}.png` alt='' loading='lazy')
					+slide(1,`Ўз&nbsp;аграр бизнесингизни биз билан қуринг`,`Ҳамкорлар, дилерлар, етказиб берувчилар ва&nbsp;улгуржи харидорларни топиш учун ягона онлайн платформа`)
					+slide(2,`Маҳсулотингизни жойланг ва&nbsp;ўз&nbsp;мижозларингизга ега бўлинг`,`Махсулотингизни платформага жойлаш орқали сиз янги харидорларга ега бўласиз ва&nbsp;ўз&nbsp;бизнесингизни ривожлантирасиз`)
					+slide(3, `Маҳсулотингизни жойланг ва&nbsp;ўз&nbsp;мижозларингизга ега бўлинг`,`Махсулотингизни платформага жойлаш орқали сиз янги харидорларга ега бўласиз ва&nbsp;ўз&nbsp;бизнесингизни ривожлантирасиз`)
				+e.arrow-wrapper.d-none.d-lg-block
					+arrow
				.swiper-pagination-wrap
					.pieProgress(role='progressbar'  aria-valuemin='0' data-step='2' aria-valuemax='100').d-none.d-lg-block
						.progress__meter
							span.progress__label

					.swiper-pagination

	// end sHeaderBanner