mixin headcards()
	+b.cardsHead
		+e.row.row
			mixin slide(i,t)
				+e.col.col-lg-3.col-sm-6
					+e.item(href="#")
						.row
							if img
							.col-auto
								+pic(`logo-${i}.png`,'',0)
							if t
								.col!= t
			+slide('2')
			+slide('1')
			+slide('7','Онлайн консултант')
			+slide('8','Агротех карталар')

mixin sHeaderBannerBody(data)
	// start sHeaderBanner
	+b.sHeaderBanner.section#sHeaderBanner&attributes(attributes)
		.container 
			+e.slider--js.swiper-container
				.swiper-wrapper
					block
				+e.arrow-wrapper.d-none.d-lg-block
					+arrow
				.swiper-pagination-wrap
					.pieProgress(role='progressbar'  aria-valuemin='0' data-step='2' aria-valuemax='100').d-none.d-lg-block
						.progress__meter
							span.progress__label

					.swiper-pagination
			+headcards()
	// end sHeaderBanner
