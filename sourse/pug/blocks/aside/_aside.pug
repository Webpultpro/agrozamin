mixin aside(data)
	// start aside
	+b.ASIDE.aside.section.pt-0&attributes(attributes)
		+e.heading
			h1 Уруғлар
			.text-secondary 211 маҳсулотлари 
		+e.toggle-btn--js.btn.btn-outline-success.mb-3.w-100.d-lg-none Показать меню 
			span
		+e.toggle-block.d-lg-block 
				mixin item(t, ...items) 
					ul
						li: strong= t
						li.has-children
							ul
								each item in items
									li: a(href="#")= item
										span 999 
				+item("Сабзавот уруғлари","Бодринг ","Помидор  ","Карам  ","Сабзи ","Қалапмир")
				+item("Дуккакли уруғлар","Ловия","Нўхат","Ясмиқ ","Люпин","Фасол")
				+item("Дон уруғлари","Қишки буғдой ","Арпа ","Жавдар ","Юлаф ","Қорабуғдой  ")
				+item("Майса уруғлари","Газон ","Жўхори ","Доривор ўсимликлар ","Эм-хашак ўтлари  ")
				+item("Полиз екини уруғлари","Тарвуз ","Қовун ","Қовоқ")
	// end aside
mixin aside2(data)
	// start aside
	+b.ASIDE.aside.section.pt-0&attributes(attributes)
		+e.toggle-block-filter--js.d-lg-block 
				
				+e.filter-title-toggle--js.d-lg-none 
					span 
					| Фильтр
				mixin item(t, ...items)
					+b.filter-item
						+e.title= t
						+e.dropdown.d-block
							if block 
