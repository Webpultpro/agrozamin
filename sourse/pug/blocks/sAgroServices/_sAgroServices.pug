mixin agroServicesTabs(data)
    .agroServiceTabs
        .container
            .tabs-region
                .tab
                    button.tablinks.active(onclick="openCity(event, 'agricultural')") Агрохизматлар
                    button.tablinks(onclick="openCity(event, 'business')") Бизнес хизматлар
                    button.tablinks(onclick="openCity(event, 'industry')") Агросаноат
                    button.tablinks(onclick="openCity(event, 'chemistry')") Агрокимё
                .tabcontent.opened(id="agricultural")
                    +servicesList()
                .tabcontent(id="business")
                    +servicesList()
                .tabcontent(id="industry")
                    +servicesList()
                .tabcontent(id="chemistry")
                    +servicesList()

