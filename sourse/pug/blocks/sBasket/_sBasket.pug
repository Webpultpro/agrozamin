mixin sBasket(order)
	// start sBasket
	+b.sBasket.section#sBasket&attributes(attributes)
		.container
			+e.inner
				table
					thead 
						tr 
							th(colspan="2") Товар
							th Нархи (сум)	
							th Ў.б.
							if !order
								th Миқдори
							th Суммаси
							if !order
								th
					mixin tr(i, t)
						tr
							td
								a(href="#") 
									+pic(`prod-${i}.jpg`,'bg',0)
							td 
								.strong.mb-1= t
								ul
									li <span>Сотувчи:</span> Ташкент АгроФерма
									block

							td 
								.text-secondary 10 199 
							td 
								.text-secondary 
									if order
										| 1 
									| килограмм
							if !order
								td 
									+addblock()
							td 10 199 сум
							if !order
								td 
									+e.btn-delete
										+icon("delete")
					tbody
						+tr("1",'Бинафша Шоҳ Нўхати')
							li <span>Олиб кетиш:</span> 15, Бектемирский район, массив Олима Оширова, Ташкент, Узбекистан
						+tr("2",'Қизил лавлаги') 
						+tr("3",'Яшил парракли укроп')
							li <span>Олиб кетиш:</span> 15, Бектемирский район, массив Олима Оширова, Ташкент, Узбекистан
						+tr("4",'Рассия гигант сабзилари') 
				if !order
					+e.total
						+e.total-price
							span.text-secondary  Жами: 
							| 
							span.fw-500 31 944 889 сум
						+e.btn(type="button") Буюртма бериш
				else
					+e.total.w-100.text-start
						+e.total-price
							.row
								.col
									span Жами:
								.col-auto
									| 31 944 889 сум
				block
	// end sBasket

